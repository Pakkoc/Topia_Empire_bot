{
  "name": "topia-empire",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@topia/web",
    "dev:bot": "turbo dev --filter=@topia/bot",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2",
    "typescript": "^5"
  },
  "overrides": {
    "@types/react": "^19",
    "@types/react-dom": "^19"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.0"
}
